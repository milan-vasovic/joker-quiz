<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<%- include('../includes/navigation.ejs') %>
    <section class="main__container">
        <h2><%= pageTitle %></h2>
        <div class="">
            <form action="/nova-sifra" class="" method="POST">
                <div class="">
                    <label for="password">Nova Šifra</label>
                    <input type="password" name="password" id="password" required>
                </div>
                <div class="">
                    <label for="confirmedPassword">Potvrdite Šifru</label>
                    <input type="password" name="confirmedPassword" id="confirmedPassword" required>
                </div>
                <input type="hidden" name="CSRFToken" value="<%= csrfToken %>" required>
                <input type="hidden" name="token" value="<%= token %>" required>
                <button type="submit" class="btn">Restartujte Šifru</button>
            </form>
            <% if (errorMessage) { %>
                <p><%= errorMessage %></p>
            <% } %>
        </div>
    </section>
<%- include('../includes/end.ejs') %>