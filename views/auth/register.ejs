<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<%- include('../includes/navigation.ejs') %>
    <section class="main__container">
        <div class="main-form__container">
            <h1><%= pageTitle %></h1>
            <form action="/registracija" class="main-form" method="POST">
                <div class="main-form__group">
                    <label class="main-form__label" for="name">Naziv Tima</label>
                    <input class="main-form__input" type="text" name="name" id="name">
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="email">Email</label>
                    <input class="main-form__input" type="text" name="email" id="email">
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="password">Šifra</label>
                    <input class="main-form__input" type="password" name="password" id="password">
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="confirmedPassword">Potvrdite Šifru</label>
                    <input class="main-form__input" type="password" name="confirmedPassword" id="confirmedPassword">
                </div>
                <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                <button type="submit" class="btn">Registrujte Vaš Tim</button>
                <a class="main__link" href="">Već ste registrovani, prijavite se</a>
            </form>
            <% if (errorMessage) { %>
                <p><%= errorMessage %></p>
            <% } %>
        </div>
    </section>
<%- include('../includes/end.ejs') %>