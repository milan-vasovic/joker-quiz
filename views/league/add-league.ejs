<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/form.css">
<%- include('../includes/navigation.ejs') %>
    <section class="main__container">
        <h2>Dodajte Ligu</h2>
        <div class="main-form__container">
            <form class="main-form" action="/admin/dodajte-ligu" method="post">
                <div class="main-form__group">
                    <label class="main-form__label" for="name">Naziv</label>
                    <input class="main-form__input" type="text" name="name" id="name" required>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="description">Opis</label>
                    <textarea class="main-form__textarea" name="description" id="description" required></textarea>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="startDate">Datum Početka</label>
                    <input class="main-form__select" type="date" name="startDate" id="startDate" required>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="endDate">Datum Završetka</label>
                    <input class="main-form__select" type="date" name="endDate" id="endDate" required>
                </div>
                <div class="main-form__group">
                    <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                    <button class="btn" type="submit">Napravite</button>
                </div>
            </form>
            <a class="main__link" href="/">Odustanite</a>
        </div>
    </section>
<%- include('../includes/end.ejs') %>