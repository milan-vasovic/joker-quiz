<!-- Creat navigation that is mobile responsive and have checks for isAuth and isAdmin -->
</head>
<body>
    <div class="backdrop"></div>
    <header class="main-header">
        <button id="side-menu-toggle">Meni</button>
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/' ? 'active' : '' %>" href="/">Početna</a>
                </li>
                <% if (isAuthenticated) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/moj-profil' ? 'active' : '' %>" href="<% if (role === 'admin' ) { %>/moj-profil<% } else { %>/moj-tim<% } %>">Moj Profil</a>
                    </li>
                    <% if (role === "admin") { %>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/dodavanje-dogadjaja' ? 'active' : '' %>" href="/admin/dodavanje-dogadjaja">Dodajte Događaj</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/dodavanje-lige' ? 'active' : '' %>" href="/admin/dodavanje-lige">Dodajte Ligu</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/dodavanje-pitanja' ? 'active' : '' %>" href="/admin/dodavanje-pitanja">Dodajte Pitanja</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/dogadjaji' ? 'active' : '' %>" href="/admin/dogadjaji">Događaji</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/lige' ? 'active' : '' %>" href="/admin/lige">Lige</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/pitanja' ? 'active' : '' %>" href="/admin/pitanja">Pitanja</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/timovi' ? 'active' : '' %>" href="/admin/timovi">Timovi</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/korisnici">Korisnici</a>
                        </li>
                        <li class="main-header__item">
                            <a class="<%= path === '/admin/dodavanje-korisnika' ? 'active' : '' %>" href="/admin/dodavanje-korisnika">Dodajte Korisnika</a>
                        </li>
                    <% } %>
                <% } %>
            </ul>
            <ul class="main-header__item-list">
                <% if (!isAuthenticated) { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/prijava' ? 'active' : '' %>" href="/prijava?redirectTo=/novosti">Prijava</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/registracija' ? 'active' : '' %>" href="/registracija">Registracija</a>
                    </li>
                <% } else { %>
                    <li class="main-header__item">
                        <form action="/logout" method="POST">
                            <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                            <button class="btn" type="submit">Odjava</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </nav>
        <nav class="mobile-nav">
            <ul class="mobile-nav__item-list">
                <li class="mobile-nav__item">
                    <a class="<%= path === '/' ? 'active' : '' %>" href="/">Početna</a>
                </li>
                <% if (isAuthenticated) { %>
                    <li class="mobile-nav__item">
                        <a class="<%= path === '/moj-profil' ? 'active' : '' %>" href="<% if (role === 'admin' ) { %>/moj-profil<% } else { %>/moj-tim<% } %>">Moj Profil</a>
                    </li>
                    <% if (role === "admin") { %>
                        <hr>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/recepti' ? 'active' : '' %>" href="/admin/dodavanje-dogadjaja">Dodajte Događaj</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/knjige' ? 'active' : '' %>" href="/admin/dodavanje-lige">Dodajte Ligu</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/dodavanje-pitanja">Dodajte Zadatak</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/dodavanje-korisnika">Dodajte Korisnika</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/lige">Lige</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/dogadjaji">Događaji</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/pitanja">Zadaci</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/timovi">Timovi</a>
                        </li>
                        <li class="mobile-nav__item">
                            <a class="<%= path === '/admin/korisnici' ? 'active' : '' %>" href="/admin/korisnici">Korisnici</a>
                        </li>
                    <% } %>
                <% } %>
                <hr>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/uslovi-koriscenja' ? 'active' : '' %>" href="/uslovi-koriscenja">Uslovi Korišćenja</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/politika-privatnosti' ? 'active' : '' %>" href="/politika-privatnosti">Politika Privatnosti</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/o-nama' ? 'active' : '' %>" href="/o-nama">O Nama</a>
                </li>             
                <hr>
                <% if (!isAuthenticated) { %>
                    <li class="mobile-nav__item">
                        <a class="<%= path === '/prijava' ? 'active' : '' %>" href="/prijava?redirectTo=/novosti">Prijava</a>
                    </li>
                    <li class="mobile-nav__item">
                        <a class="<%= path === '/registracija' ? 'active' : '' %>" href="/registracija">Registracija</a>
                    </li>
                <% } else { %>
                    <li class="mobile-nav__item">
                        <form action="/logout" method="POST">
                            <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                            <button class="btn" type="submit">Odjava</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </nav>
    </header>