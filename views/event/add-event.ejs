<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<%- include('../includes/navigation.ejs') %>
    <section class="main__container">
        <h2>Dodajte Događaj</h2>
        <div class="main-form__container">
            <form class="main-form" action="/admin/dodajte-dogadjaj" method="post">
                <div class="main-form__group">
                    <label class="main-form__label" for="name">Naziv</label>
                    <input class="main-form__input" type="text" name="name" id="name" required>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="category">Kategorija</label>
                    <select class="main-form__select" name="category" id="category" required>
                        <option value="fudbal">Fudbal</option>
                        <option value="kosarka">Košarka</option>
                        <option value="tenis">Tenis</option>
                    </select>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="description">Opis</label>
                    <textarea class="main-form__textarea" name="description" id="description" required></textarea>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="rewards0">Nagrade</label>
                    <div id="rewardsContainer">
                        <input type="text" class="main-form__input" id="rewards0" name="rewards" placeholder="Nagrada" required>
                        <input type="text" class="main-form__input" id="images0" name="images" placeholder="Slika" required>
                    </div>
                    <button class="btn" id="addReward" type="button">Dodajte</button>
                </div>
                <div class="main-form__group">
                    <label class="main-form__label" for="startDate">Datum Početka</label>
                    <input class="main-form__datetime" type="datetime-local" name="startDate" id="startDate" required>
                </div>
                <div>
                    <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                    <a href="/">Odustanite</a>
                    <button class="btn" type="submit">Napravite</button>
                </div>
            </form>
        </div>
    </section>
    <script src="/js/add-reward.js"></script>
<%- include('../includes/end.ejs') %>